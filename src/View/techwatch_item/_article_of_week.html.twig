<a href="{{ article_of_week.article_url }}">
    <div class="card bg-dark text-white">
        <img src="{{ article_of_week.image_url }}" class="card-img" alt="technological watch of the week">
    </div>
    <div class="title-box">
        <h1 class="card-title">{{ article_of_week.title }}</h1>
    </div>
</a>
<div class="box-icon">
    <div class="icon">
        <form action="/article/like/{{  article_of_week.id }}" method="post">
            <button class="btn btn-primary btn-lg">
                <i class="fa fa-star" aria-hidden="true"> {{  article_of_week.star }}</i>
            </button>
        </form>
    </div>
    <div>
        <a href="/article/getComment/{{  article_of_week.id }}">
            <button type="button" class="btn btn-primary btn-lg">
                <i class="fa fa-commenting" aria-hidden="true"></i>
            </button>
        </a>
    </div>
</div>